<div class="nav">
  <h2 class="text-center">修改明细</h2>
  <%= simple_form_for @item, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
    <%= f.input :item_type, collection: Item.item_types.keys %>
    <%= f.input :amount %>
    <%= f.input :memo %>
    <%= f.submit '保存', class: 'btn btn-primary' %>
    <%= link_to '删除', item_path(@item), method: 'delete', data: {confirm: '确定要删除?'}, class: 'btn btn-danger' %>
  <% end %>
</div>
